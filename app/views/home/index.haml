- @title_for_layout = "Home"
- @body_id = "home"

%header
  = link_to root_path do
    = image_tag "home_header.png"
    
  - if user_signed_in?
    = link_to "Dashboard", dashboard_path, :id => :login, :class => "button black"
  - else
    = link_to "Login", new_user_session_path, :id => :login

#collage
  #cta
    - unless user_signed_in?
      = link_to new_user_registration_path, :id => :signup do
        = image_tag "signup_cta.png", :alt => "Sign up"
      
    = link_to tour_path, :id => :take_a_tour do
      = image_tag "tour_cta.png", :alt => "Take a tour"
      
#random_places
  %h2 Places
  = render :partial => "shared/places_list", :locals => {:places => @places}
  
  %h2 People
  = render :partial => "shared/users_list", :locals => {:users => @users}
      
  