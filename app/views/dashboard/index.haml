- @title_for_layout = "Dashboard"
- @body_id = "dashboard"

= render :partial => "shared/header"

%h1 Dashboard

#stage
  #left
    = render :partial => "shared/profile_picture"
  
    = link_to "Edit profile", edit_profile_path(current_user), :class => "button white social_option"
    = link_to "View profile", profile_path(current_user.username), :class => "button white social_option"
  
  #right
    .box#thoughts
      %h2 What's on your mind?
      = form_for @thought, :remote => true do |f|
        = f.text_area :description, :class => :textbox, :id => :thoughts_box
        = f.submit :value => "Share", :class => "button blue", :id => "share_thought"
          
    .box#places_list
      %h2 Places
      .form_row
        %b Places you shared
        
        - if @places.size > 0
          %ul.places_list
            - @places.each do |place|
              %li
                = image_tag place.images.first.picture.url(:thumb), :class => :place
                %b.place_name= place.name
                = link_to "Edit", edit_place_path(place), :class => "button rosy"
                = link_to "Show", place_path(place), :class => "button orange"
        - else
          %p You have not shared any places yet
            
        
      = link_to "Share A Place", new_place_path, :class => "button blue"
      
    .box#dates
      %h2 Your dates
      
    .box#inbox_messages
      %h2 Messages (#{@messages.count})
      - if @messages.count == 0
        You have no new messages
      - else
        = render :partial => "shared/messages_list"
              
        = link_to "View All Messages", messages_path
      
    .box#followers
      %h2 Your followers
      
    .box#followed
      %h2 People you follow
      
    .box#account_settings
      %h2 Account settings
    
  .clearfloat