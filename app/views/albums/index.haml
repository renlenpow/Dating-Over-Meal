- @title_for_layout = "My albums"
- @body_id = "my_albums"
- @body_class = "albums"

= render :partial => "shared/header"

%h1.page_header= @title_for_layout

= render :partial => "shared/flash_notice"

#stage
  #left
  
  #right
  
    .box
      %h2.header Albums
      .content
        = render :partial => "shared/albums_listing", :locals => {:albums => @albums}
  
    = link_to "Create new album", new_album_path, :class => :action_button
  
  .clearfloat