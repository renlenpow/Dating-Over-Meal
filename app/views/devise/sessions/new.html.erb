<%
@title_for_layout = "Login"
@body_id = "login"
%>

<div class="devise_form">

  <h2>Sign in</h2>

  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
    
    <div class="form_row">
      <%= f.email_field :email, :class => :textbox, :placeholder => "Email address" %>
    </div>

    <div class="form_row">
      <%= f.password_field :password, :class => :textbox, :placeholder => "Password" %>
    </div>

    <% if devise_mapping.rememberable? -%>
      <div class="form_row">
        <%= f.check_box :remember_me %>
        <span>remember me</span>
      </div>
    <% end -%>

    <div class="form_row">
      <%= f.submit "Sign in", :class => "button green" %>
    </div>
    
    <div class="form_row">
      <h2>or</h2>
    </div>
    
    <div class="form_row">
      <%= link_to user_omniauth_authorize_path(:facebook) do %>
        <%= image_tag "facebook-connect-button.png", :alt => "Login with Facebook" %>
      <% end %>
    </div>
    
  <% end %>
  
  <footer>
    <%= link_to "Forgot your password?", new_password_path(resource_name) %> - 
    <%= link_to "Sign up", new_registration_path(resource_name) %>
  </footer>

</div>