- @title_for_layout = "Messages"
- @body_id = "message_detail"
- @body_class = "messages"

= render :partial => "shared/header"

%h1.page_header= @title_for_layout

#stage
  .embossed_box
    = render :partial => "shared/messages_list", :locals => {:show_profile_link => true}
  
    = form_for @message, :remote => true do |f|
      = f.text_field :content, :class => :textbox
      = f.hidden_field :sender_id, :value => current_user.id
      = f.hidden_field :receiver_id, :value => @messages.last.sender_id
      = f.hidden_field :parent_id, :value => @messages.first.id
      = f.submit :value => "Reply", :class => "button blue"